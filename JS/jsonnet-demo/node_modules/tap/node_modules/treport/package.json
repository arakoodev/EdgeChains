{
  "name": "treport",
  "description": "Reporters for node-tap",
  "version": "3.0.4",
  "author": "Isaac Z. Schlueter <i@izs.me> (https://izs.me)",
  "dependencies": {
    "@isaacs/import-jsx": "^4.0.1",
    "cardinal": "^2.1.1",
    "chalk": "^3.0.0",
    "ink": "^3.2.0",
    "ms": "^2.1.2",
    "tap-parser": "^11.0.0",
    "tap-yaml": "^1.0.0",
    "unicode-length": "^2.0.2"
  },
  "peerDependencies": {
    "react": "^17.0.2"
  },
  "devDependencies": {
    "events-to-array": "^1.1.2",
    "ink-testing-library": "^2.1.0",
    "minipass": "^3.1.1",
    "react": "^17.0.2",
    "tap": "^15.2.2"
  },
  "license": "ISC",
  "scripts": {
    "test": "tap",
    "snap": "tap",
    "preversion": "npm test",
    "postversion": "npm publish",
    "prepublishOnly": "git push origin --follow-tags"
  },
  "tap": {
    "jsx": true,
    "test-env": [
      "TERM_PROGRAM=iTerm.app",
      "TERM=xterm-256color",
      "TERM_PROGRAM_VERSION=3.2.7",
      "COLORTERM=truecolor",
      "FORCE_COLOR=1"
    ],
    "coverage-map": "map.js"
  },
  "files": [
    "index.js",
    "types.js",
    "lib/**/!(*.test).js"
  ],
  "nyc": {
    "all": true,
    "include": [
      "index.js",
      "lib/**/!(*.test).js"
    ]
  },
  "main": "index.js",
  "repository": "git://github.com/tapjs/treport"
}
